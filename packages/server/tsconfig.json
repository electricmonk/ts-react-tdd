{
  "extends": "ts-node/node14/tsconfig.json",
  "ts-node": {
    "files": true,

    "compilerOptions": {}
  },
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src", "test"]
}
